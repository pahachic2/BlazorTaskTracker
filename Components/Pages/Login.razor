@page "/"
@page "/login"
@inject NavigationManager NavigationManager
@using BlazorTaskTracker.Components.Layout

<div class="login-container">
    <div class="login-box">
        <h1>Login</h1>
        <p>Enter your credentials to continue</p>
        <input type="text" @bind="username" placeholder="Username or Email" class="login-input" />
        <input type="password" @bind="password" placeholder="Password" class="login-input" />
        
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <p class="error-message" style="color: red; margin-top: 10px;">@errorMessage</p>
        }
        
        <div class="login-actions">
            <button class="login-button" @onclick="HandleLogin">Login</button>
        </div>
    </div>
</div>

@code {
    private string username;
    private string password;
    private string errorMessage;

    private void HandleLogin()
    {
        if (username == "test" && password == "test")
        {
            errorMessage = null; // Clear error message
            NavigationManager.NavigateTo("/helloworld");
        }
        else
        {
            errorMessage = "Invalid username or password. Please try again.";
            Console.WriteLine("Invalid login attempt: " + errorMessage); // Keep console log
        }
    }
}
