        <!-- Профиль пользователя внизу -->
        <div class="mt-auto">
            <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                <span class="text-gray-600 font-medium text-sm">А</span>
            </div>
        </div>
    </aside>
    
    <!-- Основная часть (Main Content) -->
    <main class="flex-1 flex flex-col overflow-hidden">
        <!-- Используем компонент Header -->
        <Header ProjectName="TaskTracker Pro" 
                ProjectDescription="Управление задачами и проектами в одном месте"
                UserName="Анна Иванова"
                UserEmail="anna@example.com"
                OnAddTaskClick="HandleAddTask"
                OnSearchChanged="HandleSearch"
                OnLogoutClick="HandleLogout" />
        
        <!-- Контент страницы -->
        <div class="flex-1 overflow-hidden">
            <!-- Используем компонент KanbanBoard -->
            <KanbanBoard Columns="kanbanColumns" 
                        OnTaskClick="HandleTaskClick"
                        OnAddTaskToColumn="HandleAddTaskToColumn"
                        OnAddColumn="HandleAddColumn"
                        OnTaskMoved="HandleTaskMoved" />
        </div>
    </main>
</div>

