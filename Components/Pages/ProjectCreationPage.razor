    // Обработчики событий для Header компонента
    private void HandleAddTask()
    {
        Console.WriteLine("Добавление новой задачи");
    }
    
    private void HandleSearch(string searchQuery)
    {
        Console.WriteLine($"Поиск: {searchQuery}");
    }
    
    private void HandleLogout()
    {
        NavigationManager.NavigateTo("/login");
    }
    
    // Обработчики событий для KanbanBoard компонента
    private void HandleTaskClick(KanbanTask task)
    {
        Console.WriteLine($"Клик по задаче: {task.Title}");
    }
    
    private void HandleAddTaskToColumn(string columnId)
    {
        Console.WriteLine($"Добавление задачи в колонку: {columnId}");
    }
    
    private void HandleAddColumn()
    {
        Console.WriteLine("Добавление новой колонки");
    }
    
    private void HandleTaskMoved(TaskMovedEventArgs eventArgs)
    {
        try
        {
            // Находим задачу в исходной колонке
            var sourceColumn = kanbanColumns.FirstOrDefault(c => c.Id == eventArgs.FromColumnId);
            var task = sourceColumn?.Tasks.FirstOrDefault(t => t.Id == eventArgs.TaskId);
            
            if (task != null && sourceColumn != null)
            {
                // Удаляем задачу из исходной колонки
                sourceColumn.Tasks.Remove(task);
                
                // Находим целевую колонку и добавляем задачу
                var targetColumn = kanbanColumns.FirstOrDefault(c => c.Id == eventArgs.ToColumnId);
                if (targetColumn != null)
                {
                    task.ColumnId = eventArgs.ToColumnId;
                    targetColumn.Tasks.Add(task);
                    
                    Console.WriteLine($"Задача '{task.Title}' перемещена из '{eventArgs.FromColumnId}' в '{eventArgs.ToColumnId}'");
                    
                    // Обновляем UI
                    StateHasChanged();
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Ошибка при перемещении задачи: {ex.Message}");
        }
    }
