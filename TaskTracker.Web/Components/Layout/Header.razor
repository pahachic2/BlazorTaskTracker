    {
        Console.WriteLine($"üî® HEADER: –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è Header");
        Console.WriteLine($"üî® HEADER: UserName = {UserName}, UserEmail = {UserEmail}");
        await base.OnInitializedAsync();
    }

    protected override async Task OnParametersSetAsync()
    {
        Console.WriteLine($"üî® HEADER: –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–≤ Header");
        Console.WriteLine($"üî® HEADER: UserName = {UserName}, UserEmail = {UserEmail}");
        
        await base.OnParametersSetAsync();
    }

    private void CloseMenus()
