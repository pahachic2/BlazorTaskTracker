@* Модальное окно подтверждения удаления колонки *@

@if (IsVisible)
{
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50" @onclick="HandleCancel">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full mx-4" @onclick:stopPropagation="true">
            <!-- Заголовок -->
            <div class="flex items-center justify-between p-6 border-b border-gray-200">
                <div class="flex items-center space-x-3">
                    <div class="flex-shrink-0">
                        <div class="w-10 h-10 bg-red-100 rounded-full flex items-center justify-center">
                            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                        </div>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">Удалить колонку</h3>
                        <p class="text-sm text-gray-500">Это действие нельзя отменить</p>
                    </div>
                </div>
                <button @onclick="HandleCancel" class="text-gray-400 hover:text-gray-600 transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <!-- Содержимое -->
            <div class="p-6">
                @if (ColumnToDelete != null)
                {
                    <div class="mb-4">
                        <p class="text-gray-900 mb-2">
                            Вы уверены, что хотите удалить колонку:
                        </p>
                        <div class="bg-gray-50 rounded-lg p-3 border">
                            <h4 class="font-medium text-gray-900 mb-1">@ColumnToDelete.Title</h4>
                            <p class="text-sm text-gray-600">
                                Содержит задач: <span class="font-medium">@ColumnToDelete.Tasks.Count</span>
                            </p>
                            @if (ColumnToDelete.Tasks.Any())
                            {
                                <div class="mt-2">
                                    <p class="text-xs text-gray-500 mb-1">Задачи в колонке:</p>
                                    <div class="space-y-1">
                                        @foreach (var task in ColumnToDelete.Tasks.Take(3))
                                        {
                                            <div class="text-xs text-gray-600">• @task.Title</div>
                                        }
                                        @if (ColumnToDelete.Tasks.Count > 3)
                                        {
                                            <div class="text-xs text-gray-500">... и еще @(ColumnToDelete.Tasks.Count - 3) задач</div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
                
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-3 mb-6">
                    <div class="flex items-center">
                        <svg class="w-5 h-5 text-yellow-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                        </svg>
                        <div>
                            <p class="text-sm font-medium text-yellow-800">Внимание!</p>
                            <p class="text-xs text-yellow-700">Колонка и все её задачи будут удалены безвозвратно из проекта и базы данных.</p>
                        </div>
                    </div>
                </div>

                <!-- Кнопки -->
                <div class="flex space-x-3">
                    <button @onclick="HandleCancel"
                            class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50 transition-colors">
                        Отмена
                    </button>
                    <button @onclick="HandleConfirm"
                            class="flex-1 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors">
                        Удалить колонку
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public KanbanColumn? ColumnToDelete { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
    [Parameter] public EventCallback<KanbanColumn> OnConfirm { get; set; }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }

    private async Task HandleConfirm()
    {
        if (ColumnToDelete != null)
        {
            await OnConfirm.InvokeAsync(ColumnToDelete);
        }
    }
} 