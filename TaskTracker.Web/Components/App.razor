<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Components.Layout.MainLayout)" />
    </Found>
    <NotFound>
        <PageTitle>Не найдено</PageTitle>
        <LayoutView Layout="@typeof(Components.Layout.MainLayout)">
            <div class="flex items-center justify-center min-h-screen">
                <div class="text-center">
                    <h1 class="text-4xl font-bold text-gray-800 mb-4">404</h1>
                    <p class="text-gray-600 mb-4">Страница не найдена</p>
                    <a href="/" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
                        На главную
                    </a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>